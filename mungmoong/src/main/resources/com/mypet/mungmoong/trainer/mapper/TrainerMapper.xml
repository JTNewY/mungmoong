<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- namespace="매퍼 인터페이스 경로" --> 
<!-- 밑의 베이스 패키지 경로가 잘 맞는지 확인하기 -->
<mapper namespace="com.mypet.mungmoong.trainer.mapper.TrainerMapper">

    <!-- 훈련사 조회 -->
    <!-- LEFT OUTER JOIN user_auth auth ON t.user_id = auth.user_id -->
    <select id="select" resultType="Trainer">
        SELECT *
        FROM trainer
        WHERE user_id = #{userId}
    </select>

    <!-- 훈련사 등록 -->
    <insert id="insert">
        INSERT INTO trainer (user_id, name, gender, birth, mail, phone, 
                             address, content, reg_date) 
        VALUES (#{userId}, #{name}, #{gender}, #{birth}, #{mail}, #{phone}, 
                #{address}, #{content}, now())
    </insert>

    <!-- 훈련사 수정 -->
    <update id="update">
        UPDATE trainer
           SET title = #{title}
              ,writer = #{writer}
              ,content = #{content}
              ,upd_date = now()
        WHERE no = #{no}
    </update>

    <!-- 훈련사 삭제 -->
    <delete id="delete">
        DELETE FROM trainer
        WHERE no = #{no}
    </delete>

    <!-- 훈련사 번호 최댓값 -->
    <select id="maxPk" resultType="int">
        SELECT MAX(no)
        FROM trainer
    </select>

    <!-- 데이터 개수 조회 - [검색] -->
    <select id="count" resultType="int">
        SELECT COUNT(*)
        FROM trainer
        ORDER BY reg_date DESC
    </select>

    <!-- 훈련사 목록 - [검색] -->
    <select id="search" resultType="trainer">
        SELECT *
        FROM trainer
        ORDER BY reg_date DESC
    </select>

    <!-- 조회 수 증가 -->
    <update id="view">
        UPDATE trainer
           SET views = views + 1
        WHERE no = #{no}
    </update>

    <!-- 관리자 영역 -->
    <select id="trainerList" resultType="trainer">
        SELECT *
        FROM trainer
        ORDER BY reg_date DESC
    </select>

</mapper>