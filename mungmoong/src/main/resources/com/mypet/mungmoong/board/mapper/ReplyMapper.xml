<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mypet.mungmoong.board.mapper.ReplyMapper">

    <!-- 댓글 목록 -->
    <select id="list" resultType="Reply">
        SELECT * 
        FROM reply
    </select>

    <!-- ⭐댓글 목록 - [글번호] -->
    <select id="listByBoardNo" resultType="Reply">
        SELECT * 
        FROM reply
        WHERE board_no = #{boardNo}
        ORDER BY parent_no DESC
                ,reg_date ASC
    </select>

    <!-- 댓글 조회 -->
    <select id="select" resultType="Reply">
        SELECT * 
        FROM reply
        WHERE no = #{no}
    </select>

    <!-- 댓글 등록 -->
    <insert id="insert">
        INSERT INTO reply (user_id, parent_table, parent_no, writer, content)
        VALUES (#{userId}, #{parentTable}, #{parentNo}, #{writer}, #{content} )
    </insert>

    <!-- 댓글 수정 -->
    <update id="update">
        UPDATE reply
           SET writer = #{writer}
              ,content = #{content}
              <if test="parentNo != 0">
                ,parent_no = #{parentNo}
              </if>
              ,upd_date = now()
        WHERE no = #{no}
    </update>

    <!-- 댓글 삭제 -->
    <delete id="delete">
        DELETE FROM reply
        WHERE no = #{no}
    </delete>

    <!-- ⭐ 댓글 종속 삭제 -->
    <delete id="deleteByBoardNo">
        DELETE FROM reply
        WHERE board_no = #{boardNo}
    </delete>

    <!-- 댓글 번호 최댓값 -->
    <!-- LAST_INSERT_ID() : AI 로 증가한 가장 마지막 번호 -->
    <select id="max" resultType="int">
        SELECT MAX(no)
        FROM reply
    </select>

    <!-- ⭐ 답글 종속 삭제 -->
    <delete id="deleteByParentNo">
        DELETE FROM reply
        WHERE parent_no = #{parentNo}
    </delete>


    <!-- 부모테이블 기준으로 목록 조회 -->
    <select id="listByParent" resultType="Reply">
        SELECT *
        FROM reply
        WHERE parent_table = #{parentTable}
          AND parent_no = #{parentNo}
    </select>




</mapper>

















